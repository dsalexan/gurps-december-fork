<div id='advantages' class='gga-table with-notes'>
	<div class='itemmenu header' readonly></div>
	<div class='header desc'>
		<div class='headermenu' data-key='system.ads'>
			<span>{{i18n 'GURPS.advDisadvPerkQuirks'}}</span>
			<i class='fas fa-caret-square-down'></i>
		</div>
	</div>
	<div class='pts header'>{{i18n "GURPS.abbrevPoints"}}</div>
	<div class='ref header'>{{i18n "GURPS.abbrevReference"}}</div>

	{{#each (flatlist system.ads)}}
	{{#if ../isEditing}}
	<div class='itemmenu adsmenu' data-key='system.ads.{{@key}}'>
		<i class='fas fa-times'></i>
	</div>
	<div class='desc indent{{indent}}' data-key='system.ads.{{@key}}'>
		<input name='system.ads.{{@key}}.name' class='gcs-input' type='text' value='{{this.name}}' />
		<div class='list_note'>
			<textarea name='system.ads.{{@key}}.notes' class='gcs-input-ta' type='text'>{{this.notes}}</textarea>
		</div>
	</div>
	<div class='pts' data-key='system.ads.{{@key}}'>
		<input name='system.ads.{{@key}}.points' class='gcs-input-sm3' type='text' value='{{this.points}}' />
	</div>
	<div class='ref' data-key='system.ads.{{@key}}'>
		<input name='system.ads.{{@key}}.pageref' class='gcs-input-sm5' type='text' value='{{this.pageref}}' />
	</div>
	{{else}}
	{{#unless isCollapsed}}
	<div class='itemmenu' readonly></div>

	<div class='adsdraggable' data-key='system.ads.{{@key}}'>
		<div class='desc dblclkedit indent{{indent}}'>
			<div class='gga-desc-text'>
				<div>
					{{#if hasContains}}<i class='fas fa-caret-down expandcollapseicon'></i>{{/if}}
					{{#if hasCollapsed}}<i class='fas fa-caret-right expandcollapseicon'></i>{{/if}}
				</div>
				<div class='tooltip gga-manual'>
					{{{gurpslink this.name}}}
					{{#if (displayItemHover this)}}
					<div class='tooltiptext gga-manual'><img src='{{this.img}}' /></div>
					{{/if}}
				</div>
				<div>
					{{#if (isFoundryItem this)}}
					<i class='far fas fa-star tooltip gga-item'>
						<span class='tooltiptext'>{{i18n "GURPS.equipmentFoundryItem"}}</span>
					</i>
					{{/if}}
				</div>
			</div>
			<div class='list_note'>
				{{{gurpslinkbr this.notes}}}
			</div>
		</div>
	</div>

	<div class='pts gga-right'>{{{displayNumber this.points showPlus=false}}}</div>
	<div class='ref flex-center'>{{{pdflinkext this}}}</div>
	{{/unless}}
	{{/if}}
	{{/each}}
</div>
